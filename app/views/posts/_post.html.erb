	<div class="card" >
		<div class="card-body tg-wrap">
			<table width="100%">
				<tr>
					<td colspan="2" align="left" style="text-align: left;">
						<img src="<%= asset_path('favicon.png') %>" width="50px" height="50px" alt="Post image" style="border-radius: 50%;">
					</td>
					<td colspan="2" align="left" style="text-align: left;">
						<h5 class="card-title"><%= link_to post.title, blog_post_path(post.blog, post) %></h5>
					</td>
					<td align="right" style="text-align: right;">
						<%= render post.tags %>	
					</td>
				</tr>
				<tr>
					<td colspan="2">&nbsp;</td>
					<td colspan="2" align="left" style="text-align: left;">
						<h6 class="card-subtitle mb-2 text-muted"><%= post.subtitle %></h6>
					</td>
					<td>&nbsp;</td>
				</tr>
				<tr>
					
					<td colspan="5" align="left" style="text-align: left;">
						<div class="fr-view"><%= raw post.content %></div>
					</td>
					
				</tr>
				<tr>
					<td align="left" style="text-align: left;" >
						<i class="fas fa-thumbs-up like" style="color: green;"></i><small><%= post.get_upvotes.size %></small> 
						<i class="fas fa-angry angry"></i><small><%= post.get_downvotes.size%></small>
					</td>
					<td colspan="2" align="left" style="text-align: left;">
						<%= link_to raw('<small class="text-muted"><i class="fas fa-comment"></i> Comments ').concat(post.comments.size.to_s).concat(raw('</small>')), blog_post_path(post.blog, post) %>
					</td>
					<td colspan="2" align="right" style="text-align: right;">
						<% if current_user == post.user %>
							<div class="btn-group dropup">
								<a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></a>
								<div class="dropdown-menu">
									<%= link_to raw('<i class="fas fa-trash-alt"></i> Delete'), [post.blog, post], method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
									<%= link_to raw('<i class="fas fa-edit"></i> Edit'), edit_blog_post_path(post.blog, post), class: "dropdown-item" %>
								</div>
							</div>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>

	<script>
		 $(document).ready(function () { 
		 	$(".fr-view").each(function(i){
		 		var len=$(this).text().trim().length;
		 		if(len>100) {
		 			$(this).text($(this).text().substr(0,100)+'...');
		 		}
		 	});
		 });
	</script>
