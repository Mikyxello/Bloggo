<!DOCTYPE html>
<html>
  <head>
    <title>Bloggo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary">
      <%= link_to 'Bloggo', blogs_path, class: "navbar-brand" %>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search Bloggoes" aria-label="Search Bloggoes">
        <button class="btn my-2 my-sm-0" type="submit">Search</button>
      </form>
      <form class="form-inline">
        <button class="btn btn-success" type="button">Login</button> |
        <button class="btn btn-sm btn-secondary" type="button">Sign Up</button>
      </form>
    </nav>
    <%= yield %>
  </body>
</html>
