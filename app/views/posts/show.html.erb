<div class="container">
	<div class="jumbotron">
		<table width="100%">
			<tr>
				<td rowspan="2" width="70%" valign="top">
					<div class="card post-card">
						<table width="100%" align="center">
							<tr>
								<td colspan="4" align="left" valign="top">
									<% if @post.user.avatar_image? %>
										<%= image_tag(@post.user.avatar_image.url, alt: @post.user.avatar_image.identifier, class: "image-link") %>
									<% else %>
										<%= image_tag(asset_path('user-placeholder.jpeg'), alt: @post.user.name, class: "image-link") %>
									<% end %>
									<strong><%= @post.title %></strong>
									<small class="text-muted"> posted on </small>
									<%= link_to @post.blog.name, blog_path(@post.blog), class: "post-link" %>
									<small class="text-muted"> by </small>
									<%= link_to @post.user.name, user_path(@post.user), class: "post-link" %>
									<small class="text-muted"> &#8226; <%= time_ago_in_words(@post.created_at) %> ago</small>
								</td>
								<td align="right" valign="top">
									<% if current_user == @post.user %>
										<div class="dropdown">
											<a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></a>
											<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
												<%= link_to raw('<i class="fas fa-trash-alt"></i> Delete'), [@post.blog, @post], method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>  
												<%= link_to raw('<i class="fas fa-edit"></i> Edit'), edit_blog_post_path(@post.blog, @post), class: "dropdown-item" %>
											</div>
										</div>
									<% end %>
								</td>
							</tr>
							<tr>
								<td colspan="5" align="center">
									<% if @post.file.file.nil? %>
										<br/>
									<% else %>
										<% if @post.file.file.extension.downcase == 'mp4' %>
											<%= video_tag(@post.file.url, controls: true, autobuffer: true, class: 'post-file')  %>
										<% else %>
											<%= image_tag(@post.file.url, alt: @post.file.identifier, class: 'post-file') %>
										<% end %>
									<% end %>
								</td>
							</tr>
							<tr>
								<td colspan="3" align="left">
									<h6 class="card-subtitle mb-2 text-muted"><%= @post.subtitle %></h6>
								</td>
								<td colspan="2" align="right">
									<%= render @post.tags %>
								</td>
							</tr>
							<tr>
								<td colspan="3" rowspan="2" align="left">
									<div class="fr-view"><%= @post.content.html_safe %></div>
								</td>
								<td colspan="2" rowspan="2" align="right">
									&nbsp;
								</td>
							</tr>
							<tr>
							</tr>
							<tr>
								<td align="left">
									<%= link_to like_blog_post_path(@post.blog, @post), class: "post-link", method: :put do %>
								    	<i class="fas fa-thumbs-up like"></i><small><%= @post.get_upvotes.size %></small>
							    	<% end %>
									<%= link_to dislike_blog_post_path(@post.blog, @post), class: "post-link", method: :put do %>
										<i class="fas fa-angry angry"></i><small><%= @post.get_downvotes.size %></small>
									<% end %>
								</td>
								<td align="left">
									<small class="text-muted"><i class="fas fa-comment"></i> Comments <%= @post.comments.size.to_s %></small>
								</td>
								<td colspan="3" align="right">
									<small class="text-muted"><i class="fas fa-eye"></i> <%= @post.impressions_count %> Views </small>
								</td>
							</tr>
						</table>

						<% if user_signed_in? %>
							<div style="display: block; margin-top: 1%;">
								<%= render partial: 'comments/form_new' %>
							</div>
						<% end %>

					  	<div style="display: block; margin-top: 2%;">
							<%= render @post.comments %>
						</div>
					</div>
				</td>
				<td valign="top" width="30%">
					<div class="card" id="user_card" style="padding: 5%;">
						<div class="tg-wrap">
							<table width="100%">
								<tr>
									<% if @post.user.avatar_image? %>
										<%= image_tag(@post.user.avatar_image.url, alt: @post.user.avatar_image.identifier, class: "image-link") %>
									<% else %>
										<%= image_tag(asset_path('user-placeholder.jpeg'), alt: @post.user.name, class: "image-link") %>
									<% end %>
									<small class="card-title">
										<% if @post.user.name? %>
											<%= link_to raw(@post.user.name + "&nbsp;" + @post.user.surname), user_path(@post.user), class: "post-link" %>
										<% else %>
											<%= link_to @post.user.email, user_path(@post.user), class: "post-link" %>
										<% end %>	
									</small>
								</tr>
								<tr>
									<td>
										<small class="card-subtitle mb-2 text-muted"><%= @post.user.posts.size %> Post</small>
									</td>
								</tr>
								<tr>
								    <td>
								    	<p class='user-description'><%= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ullamcorper augue ut imperdiet vehicula. Sed felis leo, consequat sit amet malesuada et, commodo vitae quam." %></p>
								    </td>
								</tr>
							</table>
						</div>
					</div>
					<div id="related_post" style="margin-top: 5%;">
						<% if @related_posts %>
							<small class="text-muted" style="padding: 2px;">Related Posts</small>
							<div style="font-size: 0.7rem;" id="related_posts"><%= render @related_posts %></div>
						<% end %>
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>