<h2 style="text-align:center;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :email %></th>
      <th>

      </th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th><%= f.label :password %></th>
      <th>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      </th>
      <th><%= f.password_field :password, autocomplete: "off" %></th>
    </tr>
  </table>

  <% if devise_mapping.rememberable? -%>
    <div class="field" style="text-align:center;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions" style="text-align:center;">
    <%= f.submit "Login", class: "btn btn-success" %>
    <%= link_to '<button type="button" class="btn btn-danger">Login with Google</button>'.html_safe, user_google_oauth2_omniauth_authorize_path %>
    <%= link_to '<button type="button" class="btn btn-primary">Login with Facebook</button>'.html_safe, user_facebook_omniauth_authorize_path %>
  </div>
  <div>

  </div>
<% end %>

<br />
<h4 style="text-align:center;">
<%= render "devise/shared/links" %>
</h4>
