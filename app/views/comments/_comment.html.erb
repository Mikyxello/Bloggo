<div class="card" style="padding: 1%;">
	<div class="card-body tg-wrap">
		<table width="100%">
			<tr>
				<td colspan="2" align="left" valign="top">
					<% if comment.user.avatar_image? %>
						<%= image_tag(comment.user.avatar_image.url, alt: comment.user.avatar_image.identifier, width: '30px', height: '30px', style: "border-radius: 50%;", class: "image-link")  %>
					<% else %>
						<%= image_tag(asset_path('user-placeholder.jpeg'), alt: comment.user.name, width: '30px', height: '30px', style: "border-radius: 50%;", class: "image-link")  %>
					<% end %>
					<small>
						<% if comment.user.name? %>
							<%= link_to raw(comment.user.name + "&nbsp;" + comment.user.surname), user_path(comment.user) %> &#8226; <%= time_ago_in_words(comment.created_at) %> ago
						<% else %>
							<%= link_to comment.user.email, user_path(comment.user) %> &#8226; <%= time_ago_in_words(comment.created_at) %> ago
						<% end %>
					</small>
				</td>
				<td align="right" valign="top">
					<% if current_user == comment.user %>
						<div class="dropdown">
							<a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></a>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								<%= link_to raw('<i class="fas fa-trash-alt"></i> Delete'), [comment.post.blog, comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
								<%= link_to raw('<i class="fas fa-edit"></i> Edit') , edit_blog_post_comment_path(comment.post.blog, comment.post, comment), class: "dropdown-item"%>
							</div>
						</div>
					<% end %>
				</td>
			</tr>
			<tr>
				<td colspan="3" align="left">
					<p class="card-text"><%= comment.content %></p>
				</td>
			</tr>
		</table>
	</div>
</div>