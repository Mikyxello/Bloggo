# Add tag to models
gem 'acts-as-taggable-on', '~> 6.0'
# Add reactions to models
gem 'acts_as_votable', '~> 0.11.1'
# Allow any model to favorite other model
gem 'acts_as_favoritor'
# Allow any model to follow any other model
gem 'acts_as_follower', :git => 'https://github.com/tcocca/acts_as_follower.git', :branch => 'master'
# Handle visits on pages
gem 'impressionist'
# Get notifications alert
gem 'notifications', '~> 0.6.0'

# Paginating models
