<%= form_with model: [ @post.blog, @post, Comment.new ], local: true do |form| %>
  <small class="text-muted">Leave a comment</small> <br>
  <%= form.text_area :content, style: "width: 100%; resize: none;" %>
  <%= button_tag(type: 'submit', class: "btn btn-primary btn-sm") do %><i class="fas fa-share-square"></i> Comment<% end %>
<% end %>