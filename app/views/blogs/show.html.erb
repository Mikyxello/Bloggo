<div class="container">
	<div class="jumbotron" style="margin-top: 20px;">

		<img src="../resources/blog_profile_example.jpg" class="text-center rounded mx-auto d-block" style="margin-top: 50px;" alt="Bloggo Profile Pic Example"> 
		<h1 class="text-center"><%= @blog.name %></h1>

		<div class="row" style="margin-top: 80px; margin-left: 300px; margin-right: 300px;">
    	<div class="col-sm text-center">
      	<h3> Followers</h3>
      	<h6> 1M</h6>
    	</div>
    	<div class="col-sm text-center">
      	<h3> Posts</h3>
      	<h6> 452</h6>
    	</div>
    	<div class="col-sm text-center">
      	<h3> Visits</h3>
      	<h6> ciento </h6>
    	</div>
  	</div>
		<%= link_to 'Subscribe', edit_blog_path(@blog), class: "btn btn-warning", style: "margin-top: 50px; margin-bottom: -50px;"%> 
		<%-# qua ci va la funzione subscribe -%> 
	</div>

	<h3><%= @blog.description %></h3>



	<div class="row" style="margin-top: 120px;">

		<div class="col-sm">
			<div class="jumbotron">
      	<h3 class="text-center"> Lastest Post</h3>
      	<% @blog.posts.each do |post| %>
      		<div class="row" style="margin-left: 15px;">
						<div class="col-sm">
		        	<h3><%= post.title %></h3>
		       	  <p><%= post.subtitle %></p>
		      </div>
		    </div>
		    <% end %>
    	</div>
    </div>

		<div class="col-sm">
			<div class="jumbotron text-center">
      	<h3>Top 5 Post</h3>
      	  <div class="dropdown">
					  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Filter by
					  <span class="caret"></span></button>
					  <ul class="dropdown-menu">
					    <li><a href="#">Most Visited</a></li>
					    <li><a href="#">Newest</a></li>
					    <li><a href="#">Most Reacted</a></li>
	 				  </ul>
				  </div> 
    	</div>
    </div>
  </div>


			<%= link_to 'Edit Blog', edit_blog_path(@blog), class: "btn btn-warning" %> | 
			<%= link_to 'Back to Bloggoes', blogs_path, class: "btn btn-dark" %>
		
		<h2>Postoes on <%= @blog.name %></h2>
		<%= render @blog.posts %>
		<%= link_to 'New Post', new_blog_post_path(@blog), class: "btn btn-info" %>

</div>